#!/usr/bin/env ruby
lib = File.expand_path('../../lib', __FILE__)
$: << lib unless $:.include? lib
require 'epi'
require 'eventmachine'
if $0 == __FILE__
  EventMachine.run do
    %w[INT TERM].each do |s|
      Signal.trap(s) do
        puts " #{s} => bye for now!"
        EventMachine.stop rescue nil
      end
    end
    Epi::Cli.run ARGV
  end
end
