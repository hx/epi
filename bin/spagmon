#!/usr/bin/env ruby
lib = File.expand_path('../../lib', __FILE__)
$: << lib unless $:.include? lib
require 'spagmon'
require 'eventmachine'
if $0 == __FILE__
  EventMachine.run do
    %w[INT TERM].each do |s|
      Signal.trap(s) do
        puts "Shutting down after signal #{s}"
        EventMachine.stop
      end
    end
    Spagmon::Cli.run ARGV
  end
end
